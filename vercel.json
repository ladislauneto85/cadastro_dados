{
  "builds": [
    {
      "src": "sistema_cadastro/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/$1" 
    },
    {
      "src": "/(.*)",
      "dest": "sistema_cadastro/wsgi.py"
    }
  ]
}